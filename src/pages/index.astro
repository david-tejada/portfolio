---
import Card from "../components/Card.astro";
import Pill from "../components/Pill.astro";
import Tag from "../components/Tag.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portfolio - David Tejada">
  <main class="col-[content]">
    <div class="hero grid content-center">
      <h1
        class="display-text mb-4 text-7xl font-bold text-white uppercase md:text-9xl dark:text-slate-800"
      >
        David Tejada
      </h1>
      <h2 class="font-syne mb-4 text-4xl font-bold sm:text-8xl">
        I create things for the web.
      </h2>
      <p class="max-w-[50ch] leading-relaxed sm:text-xl">
        I am a frontend developer and the creator of <a
          href="https://rango.click"
          class="underline">Rango</a
        >, a browser extension helping thousands navigate the web by voice. I am
        currently looking for a new job opportunity.
      </p>
      <a
        href="#contact"
        class="mt-8 max-w-fit rounded border border-(--color-accent) px-12 py-4 font-bold text-(--color-accent)"
        >Hire me!</a
      >
    </div>

    <div>
      <h2 class="font-syne mt-24 text-2xl font-bold sm:text-4xl">
        Some things I've built
      </h2>

      <div class="card mt-12 grid">
        <a
          href="projects/rango"
          class="card-image col-[right] row-[top] block overflow-hidden rounded-xl"
        >
          <!-- <img class="object-cover" src="/screenshot-rango.png" alt="" /> -->
        </a>
        <div
          class="relative z-10 col-[left] row-[bottom] rounded-xl border border-(--color-accent) bg-white p-8 dark:bg-slate-800"
        >
          <h3 class="mt-8 text-3xl">
            <a href="projects/rango">Rango</a>
          </h3>

          <p class="mt-8 leading-relaxed">
            A browser extension used by thousands of people every day to
            navigate the web and control their browsers by voice. Available for <a
              class="text-(--color-accent)"
              href="https://chrome.google.com/webstore/detail/rango/lnemjdnjjofijemhdogofbpcedhgcpmb"
              >Chrome</a
            >, <a
              class="text-(--color-accent)"
              href="https://microsoftedge.microsoft.com/addons/detail/rango/pcngjebdhphedjkfhipblkgjbjoeaaeb"
              >Edge</a
            >, <a
              class="text-(--color-accent)"
              href="https://addons.mozilla.org/en-US/firefox/addon/rango/"
              >Firefox</a
            > and <a
              class="text-(--color-accent)"
              href="https://apps.apple.com/es/app/rango-for-safari/id6461166435?l=en-GB&mt=12"
              >Safari</a
            >.
          </p>

          <p class="mt-8 flex flex-wrap gap-2 text-sm">
            <span class="rounded border border-current px-2 py-1"
              >WebExtensions APIs</span
            >
            <span class="rounded border border-current px-2 py-1"
              >TypeScript</span
            >
            <span class="rounded border border-current px-2 py-1">React</span>
            <span class="rounded border border-current px-2 py-1">Python</span>
            <span class="rounded border border-current px-2 py-1">Jest</span>
            <span class="rounded border border-current px-2 py-1"
              >Puppeteer</span
            >
            <span class="rounded border border-current px-2 py-1">Parcel</span>
            <span class="rounded border border-current px-2 py-1"
              >GitHub Actions</span
            >
          </p>

          <p class="mt-8 flex gap-4 text-sm">
            <a href="https://github.com/david-tejada/rango">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-github"
                ><path
                  d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
              >
            </a>
            <a href="https://rango.click">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-external-link"
                ><path d="M15 3h6v6"></path><path d="M10 14 21 3"></path><path
                  d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
                ></path></svg
              >
            </a>
          </p>
        </div>
      </div>

      <Card
        title="kanban board"
        description="A kanban board web app. Coded based off the designs provided by Frontend Mentor."
        href="projects/kanban-board"
      >
        <img
          src="/logo-kanban.svg"
          alt=""
          class="mx-auto size-32 rounded-md bg-[hsl(235deg,16%,15%)] object-contain p-4"
        />
      </Card>

      <Card
        title="myteam"
        description="A full website comprised of home, about and contact pages. Coded based off the designs provided by Frontend Mentor."
        href="projects/myteam"
      >
        <img
          src="/logo-myteam.svg"
          alt=""
          class="mx-auto size-32 rounded-md bg-[rgb(1,77,86)] object-contain p-4"
        />
      </Card>

      <Card
        title="talon-filetree"
        description="I am the main contributor for this open source vscode extension that helps users navigate files by voice."
        href="projects/talon-filetree"
      >
        <img
          src="/logo-filetree.svg"
          alt=""
          class="mx-auto size-32 rounded-md bg-sky-800 object-contain p-4"
        />
      </Card>
    </div>

    <div>
      <h2 id="about" class="font-syne mt-24 text-3xl font-bold">About Me</h2>
      <p class="mt-4 leading-relaxed">
        I first started programming when I was in university. I started learning
        C++ and found it very enjoyable. I even made my final degree project
        using C++.
      </p>

      <p class="mt-4 leading-relaxed">
        It wasn't until years later that I did my first incursion in web
        development. It was around 2008. I had created a small community of
        photography enthusiast and I made a website composed of a blog and a
        forum to share our pictures and experiences. I remember that I used
        Joomla and that in order to create rounded corners you had to use
        background images. Fun times!
      </p>

      <p class="mt-4 leading-relaxed">
        More recently I decided to focus my efforts on becoming a software
        developer. It was something that I missed and that I was passionate
        about. My first big project was a browser extension. I had started using
        voice to control my computer and one thing that I found lacking was the
        ability to easily control the browser by voice. The solutions up to that
        point were unsatisfying to me. So I set myself to create something
        better. It took me hundreds of hours and had to overcome many challenges
        but I am very happy with the result. Rango, the extension to control
        your browser by voice is used by me and a several hundred other people
        everyday.
      </p>

      <p class="mt-4">
        When I'm not coding I enjoy taking walks to the beach, walking my cats
        (Yes, with a leash!) and eating pizza.
      </p>
    </div>

    <div>
      <h2 class="font-syne mt-24 text-3xl font-bold">My Skills</h2>
      <p class="mt-4 leading-relaxed">
        These are the technologies I am more familiar with. Some I have used
        more than others but I feel fairly confident in all of them:
      </p>

      <ul class="mt-4 flex flex-wrap gap-4">
        <li><Tag>Javascript</Tag></li>
        <li><Tag>Typescript</Tag></li>
        <li><Tag>WebExtensions API</Tag></li>
        <li><Tag>React</Tag></li>
        <li><Tag>NextJS</Tag></li>
        <li><Tag>HTML & CSS</Tag></li>
        <li><Tag>Tailwind</Tag></li>
        <li><Tag>SASS</Tag></li>
        <li><Tag>Git</Tag></li>
        <li><Tag>Python</Tag></li>
      </ul>

      <p class="mt-4 leading-relaxed">I also speak these languages:</p>

      <ul class="mt-4 flex flex-wrap gap-4">
        <li><Pill left="Spanish" right="native" /></li>
        <li><Pill left="English" right="proficient" /></li>
        <li><Pill left="German" right="advanced" /></li>
        <li><Pill left="French" right="intermediate" /></li>
      </ul>
    </div>
  </main>
</Layout>

<style>
  @font-face {
    font-family: "Impact";
    src: url("/fonts/impact.ttf") format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  .hero {
    min-height: max(
      100svh - 1 * (var(--header-height) + var(--header-margin-top)),
      500px
    );
  }

  [id] {
    scroll-margin-top: calc(var(--header-height) + 1rem);
  }

  .display-text {
    --perspective-x: -3;
    --perspective-y: -2;

    font-family: Impact, Anton, sans-serif;
    text-shadow:
      -1px 1px 0 var(--color-accent),
      0 1px 0 var(--color-accent),
      1px 1px 0 var(--color-accent),
      -1px -1px 0 var(--color-accent),
      calc(-0.02em * (1 + var(--perspective-x)))
        calc(0.02em * (1 + var(--perspective-y))) 0 var(--color-accent),
      calc(-0.04em * (1 + var(--perspective-x)))
        calc(0.04em * (1 + var(--perspective-y))) 0 var(--color-accent),
      calc(-0.06em * (1 + var(--perspective-x)))
        calc(0.06em * (1 + var(--perspective-y))) 0 var(--color-accent);

    letter-spacing: 2px;
  }
</style>

<style>
  .card {
    /* box-shadow: 4px -4px 0px 0px var(--color-accent); */
    --card-offset-x: 10px;
    --card-offset-y: 100px;
    grid-template-rows:
      [top-start] var(--card-offset-y)
      [bottom-start] 1fr [top-end] var(--card-offset-y)
      [bottom-end];
    grid-template-columns:
      [left-start] var(--card-offset-x) [right-start] 1fr
      [left-end] var(--card-offset-x) [right-end];
  }

  @media (width >= 40rem) {
    .card {
      --card-offset-y: 50px;
      --card-offset-x: 150px;
    }
  }

  @media (width >= 48rem) {
    .card {
      --card-offset-x: 200px;
    }
  }

  @media (width >= 64rem) {
    .card {
      --card-offset-x: calc(50% - 50px);
    }
  }

  .card-image {
    background-image: url("/screenshot-rango.png");
    background-color: var(--color-accent);
    background-size: cover;
    /* background-position: 25%; */
    background-blend-mode: luminosity;
    transition: background-color 0.3s ease-in-out;
    border: 1px solid var(--color-accent);
  }

  .card:hover .card-image {
    background-color: transparent;
  }

  :global(.dark) .card-image {
    background-image: url("/screenshot-rango-dark.png");
    background-blend-mode: darken;
  }
</style>
