---
interface Props {
  title: string;
  url: string;
  repoUrl: string;
  liveUrl: string;
  image: string;
  imageDark: string;
  tags: string[];
  reverse?: boolean;
}

const { title, url, repoUrl, liveUrl, tags, image, imageDark, reverse }: Props =
  Astro.props;
---

<div class="card relative mt-24 border-t-[0.1px] border-transparent">
  <a
    href={url}
    class:list={[
      "card-image",
      { "right-0": !reverse },
      { "left-0": reverse },
      "absolute block h-[calc(100%-var(--card-offset-y))] overflow-hidden rounded-xl border border-(--color-accent)",
    ]}
  >
  </a>
  <div
    class:list={[
      "card-content",
      { "ml-auto": reverse },
      "isolate z-10 mt-(--card-offset-y) rounded-xl border border-(--color-accent) bg-white p-8 dark:bg-slate-800",
    ]}
  >
    <h3 class="mt-8 text-3xl">
      <a href={url}>{title}</a>
    </h3>

    <slot />

    <p class="mt-8 flex flex-wrap gap-2 text-sm">
      {
        tags.map((tag) => (
          <span class="rounded border border-current px-2 py-1">{tag}</span>
        ))
      }
    </p>

    <p class="mt-8 flex gap-4 text-sm">
      <a href={repoUrl}>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-github"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>
      <a href={liveUrl}>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-external-link"
          ><path d="M15 3h6v6"></path><path d="M10 14 21 3"></path><path
            d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path></svg
        >
      </a>
    </p>
  </div>
</div>

<style
  define:vars={{ imageUrl: `url(${image})`, imageUrlDark: `url(${imageDark})` }}
>
  .card-image,
  .card-content {
    width: min(100% - 1rem, 45ch);
  }

  .card {
    --card-offset-y: 50px;
  }

  .card-image {
    background-image: var(--imageUrl);
    background-color: var(--color-accent);
    background-size: cover;
    background-blend-mode: luminosity;
    transition: background-color 0.3s ease-in-out;
  }

  .card:hover .card-image {
    background-color: transparent;
  }

  :global(.dark) .card-image {
    background-image: var(--imageUrlDark);
    background-blend-mode: darken;
  }
</style>
