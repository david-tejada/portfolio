---
import FiveStars from "./FiveStars.astro";

interface Props {
  avatarImage: string;
  author: string;
}

const { avatarImage, author } = Astro.props;
---

<div class="flex gap-6 rounded-lg bg-orange-50 p-8">
  <img src={avatarImage} alt="" class="size-14 rounded-full" />
  <div>
    <div class="flex flex-col gap-2 sm:flex-row">
      <FiveStars />
      <p class="font-bold">{author}</p>
    </div>
    <p class="mt-2">
      <slot />
    </p>
  </div>
</div>
